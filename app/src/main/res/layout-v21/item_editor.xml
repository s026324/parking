<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_valst_nr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_foto"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="EBG998"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_adressas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_valst_nr"
            android:layout_marginTop="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Virsuliskiu 24, Vilnius, 5008"
            android:textColor="@color/darkGray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_aprasymas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adressas"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Tam tikras aprasymas kuris bus keliose eilutese ir nurodys info apie pazeidima"
            android:textColor="@color/darkerGray"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_aprasymas"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="2018 10 26"
            android:textSize="14sp" />


        <Button
            android:id="@+id/patvirtinti"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_below="@+id/tv_data"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonshape"
            android:text="Patvirtinti"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/atmesti"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/patvirtinti"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/patvirtinti"
            android:background="@drawable/buttonshapegrey"
            android:text="Atmesti"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/atmesti2"
            android:layout_width="370dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/tv_data"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:text="Atmesti"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/patvirtinti2"
            android:layout_width="370dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/tv_data"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:text="Patvirtinti"
            android:visibility="gone"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>