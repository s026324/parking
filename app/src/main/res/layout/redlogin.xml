<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

<!--        &lt;!&ndash; Email Label &ndash;&gt;
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/mEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="El. paštas"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>-->


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">


            <EditText
                android:id="@+id/mEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="El. paštas"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">


            <EditText
                android:id="@+id/mPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Slaptažodis"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

<!--        &lt;!&ndash; Password Label &ndash;&gt;
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/mPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Slaptažodis"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>-->

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinlogin"
            style="@style/SpinKitView.Large.Wave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:visibility="gone"
            app:SpinKit_Color="@color/colorPrimaryDark" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/mbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Prisijungti" />

        <TextView
            android:id="@+id/passwordreset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pamiršote slaptažodį?"
            android:textAlignment="center"
            android:clickable="true"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>



