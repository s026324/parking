<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_above="@id/upload"
    android:orientation="vertical"
    android:id="@+id/contentMain">

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LinearLayouts02">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <!--        <include
            android:id="@+id/toolbar"
            layout="@layout/actionbar"/>-->
            <!--        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/blue"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Fiksuoti pažeidimai" />-->


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Situacijos aprašymas:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_text_file_name"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/valstnum"
                android:hint="Įveskite tekstą"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Transporto pr. valst. reg. numeris:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/valstnum"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView2"
                android:hint="Įveskite numerį"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />


            <Button
                android:id="@+id/btn_get_place"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_text_file_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonshape"
                android:text="Pateikti adresą" />

            <TextView
                android:id="@+id/tv_place_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_get_place"
                android:layout_margin="10dp"
                android:text="Vieta nenustatyta"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/choose"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/valstnum"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonshape"
                android:text="Pridėti nuotrauką" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="220dp"

                android:adjustViewBounds="false"
                android:padding="10dp"
                app:srcCompat="@android:drawable/btn_dialog" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/LinearLayouts02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:orientation="vertical">

        <Button
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Pranešti" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />



</RelativeLayout>
