<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/recyclerID4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerID"
        android:layout_alignStart="@+id/recyclerID"
        android:layout_marginBottom="-85dp"
        android:layout_weight="1"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/recyclerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/recyclerID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/nuotrauka"
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp" />

    <Button
        android:id="@+id/delete"
        android:onClick="onDeleteClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/patvirtinti"
        android:layout_marginEnd="74dp"
        android:text="Istrinti" />

    <Button
        android:id="@+id/patvirtinti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="126dp"
        android:layout_marginStart="47dp"
        android:text="Patvirtinti" />
</RelativeLayout>